rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla base: usuarios autenticados pueden leer y escribir
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Productos: lectura pública (para el agente IA), escritura autenticada
    match /productos/{productoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Conversaciones: solo backend y usuarios autenticados
    match /conversaciones/{conversacionId} {
      allow read, write: if request.auth != null;
    }
    
    // Pedidos de despacho: solo usuarios autenticados
    match /pedidos_despacho/{pedidoId} {
      allow read, write: if request.auth != null;
    }
    
    // Configuración IA: solo administradores
    match /configuracion_ia/{configId} {
      allow read, write: if request.auth != null;
    }
    
    // Webhooks log: solo lectura para debug
    match /webhooks_log/{logId} {
      allow read: if request.auth != null;
      allow create: if true; // Cloud Functions pueden crear
    }
  }
}
