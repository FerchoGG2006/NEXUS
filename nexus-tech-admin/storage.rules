rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Comprobantes de pago: solo Cloud Functions pueden escribir
    match /comprobantes/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Imágenes de productos: lectura pública, escritura autenticada
    match /productos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
